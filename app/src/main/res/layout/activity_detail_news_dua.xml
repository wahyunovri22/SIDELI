<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light"
    android:padding="5dp"
    tools:context="creative.can.com.suratpengantar.Activity.DetailNewsDuaActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="News"
                android:textColor="@color/hitam" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/txt_detail_tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12/Desember 2017"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:drawablePadding="5dp"
                android:textColor="@color/hitam" />

            <TextView
                android:drawableLeft="@drawable/ic_person_add_black_24dp"
                android:drawablePadding="5dp"
                android:id="@+id/txt_detail_pembuat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ds Krajankulon"
                android:textColor="@color/hitam" />

            <TextView
                android:id="@+id/txt_detail_isi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_assignment_black_24dp"
                android:drawablePadding="5dp"
                android:text="Gotong royong bersama membangun desa Krajankulon, membersihkan selokan"
                android:textColor="@color/hitam" />


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
